<%- include('../partials/header') %>

<div class="container center">
    <iframe src="/public/audio/wandering-6394.mp3" allow="autoplay" style="display:none" id="iframeAudio">
    </iframe> 
    <video playsinline preload="auto" autoplay muted loop src="/public/videos/ImageVideoBackground.mp4" type="video/mp4" id="homeBackground">
    </video>
    <h2 class="h2Search">NASA Video Library Index</h2>
</div>

<div class="container center">
    <div class="container row text-center">
        <% let btn = false %>
        <% let vid = 'Play' %>
        
        <% imageVideo.collection.items.forEach(function(i){ %>
            <% if(i.links){ %>
            <div class="card mt-3 me-3 countryCard">
                <video playsinline poster="<%= i.links[0].href %>" id="videoIndex">
                    <source src="<%= i.links[0].href %>" type="video/mp4">
                </video>
                <div class="card-body">
                    <h5 class="card-title"><%= i.data[0].title%></h5>
                    <% console.log('items: ', i)%>
                   
                    
                    <a href="/imageVideoLib/<%= i.data[0].nasa_id%>" class="btn">Image Details</a>
                </div>
            </div>
            <% } %>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>