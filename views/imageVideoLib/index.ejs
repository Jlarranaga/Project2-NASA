<%- include('../partials/header') %>

<div class="container center">

    <h2>NASA Image and Video Library Index</h2>

    <form action="/imageVideoLib/index" method="GET">

        <input type="text" placeholder="Image/Video Search">
        <input type="submit">
    </form>

    <img src='' alt="NASA image of the day"> 
</div>

<div class="container center">
    <div class="container row text-center">
        <% imageVideo.collection.items.forEach(function(i){ %>
            <% //console.log('items: ', i)%>
            <% console.log('title: ', i.data[0].title)%>
            <% console.log('nasa id: ', i.data[0].nasa_id)%>
            <% console.log('image: ', i.links[0].href)%>
            <div class="card mt-3 me-3 countryCard">
                <% const img = i.links[0].href %>
                <img src="<%= img %>" alt="NASA Image" class="card-img-top mt-3">
                <div class="card-body">
                    <h5 class="card-title"><%= i.data[0].title%></h5>
                    
                    <a href="/imageVideoLib/<%= i.data[0].nasa_id%>" class="btn">Image Details</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>